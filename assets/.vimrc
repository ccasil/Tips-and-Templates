colorscheme desert

if !exists("g:syntax_on")
    syntax enable
endif

set mouse=a
set title
set cursorline
set wildmenu
set lazyredraw
set number
set wrap
set linebreak
set showbreak=+++
set textwidth=100
set showmatch
set spell
set visualbell
set noerrorbells

set hlsearch
set smartcase
set ignorecase
set incsearch

set autoindent
set shiftwidth=4
set smartindent
set smarttab
set softtabstop=4
set tabstop=4

set ruler

set undolevels=1000
set backspace=indent,eol,start